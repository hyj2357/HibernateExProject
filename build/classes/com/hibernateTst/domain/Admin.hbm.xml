<?xml version="1.0" encoding="gb2312"?>
<!-- 指定Hiberante3映射文件的DTD信息 -->
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!--上面四行对所有的hibernate映射文件都相同 -->
<!-- hibernate-mapping是映射文件的根元素 -->
<hibernate-mapping package="com.hibernateTst.domain">
   <class name="Admin" table="Admin_2">
      <id name="admin_id" type="int" length="10"><generator class="identity"/></id>
      <property name="admin_name" type="string" length="32"/>
      <property name="admin_password" type="string" length="32"/>
   </class>
</hibernate-mapping>